doctype html
html
  include includes/head.pug

  body
    +nav('employees.html')

    .main-content
      include includes/header.pug

      .ch-content
        .ch-content-hgroup
          h2.ui.medium.header Lista de Colaboradores
            .sub.header Listagem de todos os colaboradores cadastrados no sistema.

          button.ui.positive.button.js-new-billet Novo colaborador

        .ui.stackable.padded.grid
          .row
            .sixteen.wide.column
              .ui.segments
                .ui.segment.attached.paddingless
                  table.ui.basic.selectable.table
                    thead
                      tr
                        th(colspan="2") Nome
                        th E-mail
                        th Cargo
                        th Nº de Registro
                        th &nbsp;
                    tbody
                      each worker in workers
                        tr.row-link(data-href= worker.href)
                          td.center.aligned.ch-avatar-container
                            img.ch-avatar.small.rounded(src= worker.avatar_src)
                          td= worker.name
                          td= worker.email
                          td= worker.post
                          td= worker.id
                          td.right.aligned.ch-table-buttons
                            button.ui.icon.button.js-show-detail
                              i.chevron.down.icon
                        tr.invisible
                          td(colspan="7")
                            .details.hidden lorem ipsum

              .ui.segment.center.aligned.basic
                .row
                  .sixteen.wide.right.aligned.column
                    .ui.pagination.menu
                      a.disabled.item.
                        Anterior
                      a.active.item.
                        1
                      .disabled.item.
                        ...
                      a.item.
                        10
                      a.item.
                        11
                      a.item.
                        12
                      a.item.
                        Próxima

    .ui.ch-modal.long.modal
      i.close.icon
      .header.
        Novo colaborador

      form.ui.form
        .content
          .ui.basic.padded.segment
            .ch-avatar-upload
              img.ch-avatar.big(src="http://via.placeholder.com/120x120")
              .info
                h3.ui.header Foto de perfil
                p Extensões de arquivo aceitas: .jpeg, .png, .gif, .tiff
                p Limite de tamanho de arquivo: 10MB
                .ch-input-file
                  label.ui.tiny.button.primary(for="file").
                      Adicionar foto
                  input(type="file" id="file")

        .ui.divider.fitted

        .content
          .ui.basic.padded.segment
            h3.ui.header Informações Pessoais

            .ui.divider.hidden

            .fields
              .eight.wide.field.required
                label(for="") Nome Completo
                input(type="text" placeholder="Nome")

              .field.required
                label(for="") Nº de Registro
                input(type="text")

            .four.fields
              .field
                label(for="") Data de Nascimento
                .ui.left.icon.input
                  input(type="text" placeholder="dd/mm/aaaa")
                  i.calendar.icon

              .field
                label(for="") Nacionalidade
                input(type="text" placeholder="Nacionalidade")

              .field
                label(for="") Naturalidade
                input(type="text" placeholder="Naturalidade")

              .field
                label(for="") Sexo
                input(type="text" placeholder="")

            .two.fields
              .field
                label(for="") Estado Civil
                select.ui.dropdown(name="")
                    each option in ["Opção 1", "Opção 2"]
                      option(value= option)= option
              .field
                label Escolaridade
                select.ui.dropdown(name="")
                    each option in ["Opção 1", "Opção 2"]
                      option(value= option)= option

            .two.fields
              .field
                label(for="") Cargo
                input(type="text")

              .field
                label(for="") Salário
                .ui.right.labeled.input
                  input(type="text" placeholder="0,00")
                  .ui.dropdown.label
                    .text BRL
                    i.dropdown.icon
                    .menu
                      .item BRL
                      .item EUR

        .ui.divider.fitted

        .content
          .ui.basic.padded.segment
            h3.ui.header Informações de Endereço

            .ui.divider.hidden

            .fields
              .four.wide.field.required
                label(for="") CEP
                input(type="text" placeholder="00.000-00")

              .ten.wide.field.required
                label(for="") Endereço
                input(type="text" placeholder="Endereço")

              .two.wide.field.required
                label(for="") Número
                input(type="text" placeholder="Número")

            .four.fields
              .field
                label(for="") Complemento
                input(type="text")

              .field
                label(for="") Bairro
                input(type="text")

              .field
                label(for="") Estado
                select.ui.dropdown(name="")
                  option(value="") UF
                  each option in ["Option 1", "Option 2", "Option 3", "Option 4"]
                    option(value= option)= option

              .field
                label(for="") Cidade
                select.ui.dropdown(name="")
                  option(value="") Selecione uma Cidade
                  each option in ["Option 1", "Option 2", "Option 3", "Option 4"]
                    option(value= option)= option

      .actions
        .ui.button.close Cancelar
        .ui.submit.positive.button Salvar

    include includes/notifications.pug
    include includes/search.pug
    include includes/foot.pug
    script(type="text/javascript").
      $('.js-new-billet').on('click', function() {
        $('.long.modal').modal('show');
        $(this).removeClass('.active.selected');
      });
