{
  "name": "chameleon",
  "version": "1.0.0-alpha.0.1.0",
  "description": "Nexaas web framework",
  "main": "src/index.js",
  "files": [
    "./src"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --colors",
    "doc": "jsdoc -c jsdoc.conf.json",
    "build:watch": "standard \"src/**/*.js\" \"test/**/*.js\" && webpack -w --mode development",
    "build:prod": "standard \"src/**/*.js\" \"test/**/*.js\" && webpack --mode production"
  },
  "keywords": [
    "UI",
    "Design system"
  ],
  "author": "The Chameleon authors (https://github.com/myfreecomm/chameleon/graphs/contributors)",
  "license": "MIT",
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "docdash": "^1.1.1",
    "jest": "^24.8.0",
    "jsdoc": "^3.6.2",
    "standard": "^12.0.1",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3"
  },
  "dependencies": {}
}
